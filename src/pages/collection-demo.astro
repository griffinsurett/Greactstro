---
// src/pages/collection-demo.astro
// Demo page showing Section component with content collections
import BaseLayout from '@/layouts/BaseLayout.astro';
import Section from '@/components/Section/Section.astro';
---

<BaseLayout title="Collection Demo - Section Component">
  <main>
    <!-- Hero Section -->
    <Section variant="hero" variantProps={{
      backgroundColor: "bg-gradient-to-br from-blue-900 to-purple-900",
      sectionPadding: "py-20"
    }}>
      <div slot="heading">
        <h1 class="text-6xl font-bold text-white">Content Collections + Section Variants</h1>
      </div>
      <div slot="description">
        <p class="text-xl text-gray-200">See how the Section component integrates with Astro content collections</p>
      </div>
    </Section>

    <!-- Services Section -->
    <Section variant="cardGrid" variantProps={{
      columns: { sm: 1, md: 2, lg: 3 },
      backgroundColor: "bg-gray-50",
      sectionPadding: "py-16"
    }}>
      <div slot="cards">
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
          <div class="text-4xl mb-4">üé®</div>
          <h3 class="text-xl font-semibold mb-2">Web Design</h3>
          <p class="text-gray-600">Professional web design services for modern businesses.</p>
        </div>
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
          <div class="text-4xl mb-4">üì±</div>
          <h3 class="text-xl font-semibold mb-2">Mobile Apps</h3>
          <p class="text-gray-600">Native and cross-platform mobile applications.</p>
        </div>
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
          <div class="text-4xl mb-4">‚ö°</div>
          <h3 class="text-xl font-semibold mb-2">Performance</h3>
          <p class="text-gray-600">Lightning-fast websites and apps.</p>
        </div>
      </div>
    </Section>

    <!-- Two Column Section -->
    <Section variant="twoCol" variantProps={{
      backgroundColor: "bg-white",
      sectionPadding: "py-16"
    }}>
      <div slot="left">
        <h2 class="text-4xl font-bold mb-6">Why Choose Us?</h2>
        <p class="text-lg text-gray-600 mb-6">
          We combine cutting-edge technology with proven design principles to create websites that not only look amazing but also perform exceptionally well.
        </p>
        <ul class="space-y-3">
          <li class="flex items-center">
            <span class="text-green-500 mr-3">‚úì</span>
            Responsive design that works on all devices
          </li>
          <li class="flex items-center">
            <span class="text-green-500 mr-3">‚úì</span>
            SEO optimized for better search rankings
          </li>
          <li class="flex items-center">
            <span class="text-green-500 mr-3">‚úì</span>
            Fast loading times and performance
          </li>
        </ul>
      </div>
      <div slot="right">
        <div class="bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl p-8 text-white">
          <h3 class="text-2xl font-bold mb-4">Ready to Get Started?</h3>
          <p class="mb-6">Let's discuss your project and create something amazing together.</p>
          <a href="/contact" class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            Contact Us
          </a>
        </div>
      </div>
    </Section>

    <!-- Centered Section -->
    <Section variant="centered" variantProps={{
      backgroundColor: "bg-gray-900",
      textColor: "text-white",
      sectionPadding: "py-16"
    }}>
      <div slot="additional">
        <h2 class="text-3xl font-bold mb-8">Our Technology Stack</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="text-4xl mb-2">‚öõÔ∏è</div>
            <h3 class="font-semibold">React</h3>
            <p class="text-sm text-gray-300">Modern UI development</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-2">üöÄ</div>
            <h3 class="font-semibold">Astro</h3>
            <p class="text-sm text-gray-300">Static site generation</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-2">üé®</div>
            <h3 class="font-semibold">Tailwind CSS</h3>
            <p class="text-sm text-gray-300">Utility-first CSS</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-2">üìò</div>
            <h3 class="font-semibold">TypeScript</h3>
            <p class="text-sm text-gray-300">Type-safe JavaScript</p>
          </div>
        </div>
      </div>
    </Section>

    <!-- Masonry Section -->
    <Section variant="masonry" variantProps={{
      columns: { xs: 1, sm: 2, md: 3 },
      backgroundColor: "bg-white",
      sectionPadding: "py-16"
    }}>
      <div slot="items">
        <div class="bg-gray-50 rounded-lg p-6 hover:bg-gray-100 transition-colors">
          <h3 class="text-lg font-semibold mb-2">Business Landing Page</h3>
          <p class="text-gray-600 mb-4">A high-converting landing page for a corporate business.</p>
        </div>
        <div class="bg-gray-50 rounded-lg p-6 hover:bg-gray-100 transition-colors">
          <h3 class="text-lg font-semibold mb-2">E-commerce Store</h3>
          <p class="text-gray-600 mb-4">Modern online store with advanced features.</p>
        </div>
        <div class="bg-gray-50 rounded-lg p-6 hover:bg-gray-100 transition-colors">
          <h3 class="text-lg font-semibold mb-2">Portfolio Website</h3>
          <p class="text-gray-600 mb-4">Creative portfolio showcasing amazing work.</p>
        </div>
      </div>
    </Section>

    <!-- Tabs Section -->
    <Section variant="tabs" variantProps={{
      tabStyle: "pills",
      backgroundColor: "bg-blue-50",
      sectionPadding: "py-16"
    }}>
      <div slot="tabs">
        <div class="flex flex-wrap gap-2 justify-center mb-8">
          <button class="tab-button active px-6 py-2 bg-blue-500 text-white rounded-full">Services</button>
          <button class="tab-button px-6 py-2 bg-gray-200 text-gray-700 rounded-full">Projects</button>
          <button class="tab-button px-6 py-2 bg-gray-200 text-gray-700 rounded-full">Testimonials</button>
        </div>
      </div>
      <div slot="content">
        <div class="tab-content active">
          <div class="grid md:grid-cols-3 gap-6">
            <div class="text-center">
              <div class="text-4xl mb-2">üé®</div>
              <h3 class="font-semibold">Web Design</h3>
            </div>
            <div class="text-center">
              <div class="text-4xl mb-2">üì±</div>
              <h3 class="font-semibold">Mobile Apps</h3>
            </div>
            <div class="text-center">
              <div class="text-4xl mb-2">‚ö°</div>
              <h3 class="font-semibold">Performance</h3>
            </div>
          </div>
        </div>
        <div class="tab-content hidden">
          <div class="text-center">
            <h3 class="text-2xl font-bold mb-6">Our Projects</h3>
            <p class="text-gray-600">Check out some of our recent work.</p>
          </div>
        </div>
        <div class="tab-content hidden">
          <div class="text-center">
            <h3 class="text-2xl font-bold mb-6">Client Reviews</h3>
            <p class="text-gray-600">What our clients say about us.</p>
          </div>
        </div>
      </div>
    </Section>

    <!-- Accordion Section -->
    <Section variant="accordion" variantProps={{
      style: "cards",
      backgroundColor: "bg-gray-50",
      sectionPadding: "py-16"
    }}>
      <div slot="items">
        <div class="accordion-item">
          <button class="accordion-trigger w-full text-left p-4 bg-white rounded-lg shadow mb-2 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between">
              <span class="text-lg font-semibold">What technologies do you use?</span>
              <span class="text-2xl">+</span>
            </div>
          </button>
          <div class="accordion-content hidden p-4 bg-white rounded-lg shadow">
            <p class="text-gray-600">We use modern technologies including React, Vue.js, Node.js, Python, and cloud platforms like AWS and Azure.</p>
          </div>
        </div>
        <div class="accordion-item">
          <button class="accordion-trigger w-full text-left p-4 bg-white rounded-lg shadow mb-2 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between">
              <span class="text-lg font-semibold">How long does a typical project take?</span>
              <span class="text-2xl">+</span>
            </div>
          </button>
          <div class="accordion-content hidden p-4 bg-white rounded-lg shadow">
            <p class="text-gray-600">Project timelines vary based on complexity. A simple website might take 4-6 weeks, while complex applications can take 3-6 months.</p>
          </div>
        </div>
        <div class="accordion-item">
          <button class="accordion-trigger w-full text-left p-4 bg-white rounded-lg shadow mb-2 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between">
              <span class="text-lg font-semibold">Do you provide ongoing support?</span>
              <span class="text-2xl">+</span>
            </div>
          </button>
          <div class="accordion-content hidden p-4 bg-white rounded-lg shadow">
            <p class="text-gray-600">Yes! We offer comprehensive support packages including maintenance, updates, security patches, and 24/7 monitoring.</p>
          </div>
        </div>
      </div>
    </Section>
  </main>
</BaseLayout>

<script>
  // Tab functionality
  document.querySelectorAll('.tab-button').forEach((button, index) => {
    button.addEventListener('click', () => {
      // Remove active class from all buttons and content
      document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active', 'bg-blue-500', 'text-white'));
      document.querySelectorAll('.tab-button').forEach(btn => btn.classList.add('bg-gray-200', 'text-gray-700'));
      document.querySelectorAll('.tab-content').forEach(content => content.classList.add('hidden'));
      
      // Add active class to clicked button and corresponding content
      button.classList.add('active', 'bg-blue-500', 'text-white');
      button.classList.remove('bg-gray-200', 'text-gray-700');
      document.querySelectorAll('.tab-content')[index].classList.remove('hidden');
    });
  });

  // Accordion functionality
  document.querySelectorAll('.accordion-trigger').forEach((trigger) => {
    trigger.addEventListener('click', () => {
      const content = trigger.nextElementSibling;
      const icon = trigger.querySelector('span:last-child');
      
      if (content.classList.contains('hidden')) {
        content.classList.remove('hidden');
        icon.textContent = '‚àí';
      } else {
        content.classList.add('hidden');
        icon.textContent = '+';
      }
    });
  });
</script>
