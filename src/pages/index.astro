---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
import HeroBg from "@/assets/glen-rushton-PjeZGaKunAI-unsplash.jpg"; // Example image, replace with your own
import PrimaryHero from "@/components/StaticSections/PrimaryHero.astro";
---

<Layout title="Welcome to Astro!">
  <!-- Hero Section with two buttons -->
  <PrimaryHero title="Welcome to Astro!" />

  {/* About Us */}

  {/* Services */}
  <Section
    collection="services"
    query="getAll"
    heading={{ text: "Our Services", tagName: "h2" }}
  />

  {/* Clients */}
  <Section
    collection="clients"
    query="getAll"
    heading={{ text: "Our Clients", tagName: "h2" }}
  />

  {/* Projects */}
  <Section
    collection="projects"
    query="getAll"
    heading={{ text: "Our Projects", tagName: "h2" }}
  />

  {/* Testimonials */}
  <Section
    collection="testimonials"
    query="getAll"
    heading={{ text: "Client Testimonials", tagName: "h2" }}
  />
</Layout>