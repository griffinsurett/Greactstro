---
// src/pages/index.astro
import ExtendedLayout from "@/layouts/ExtendedLayout.astro";
import Section from "@/components/Section/Section.astro";
import Card from "@/components/LoopComponents/Card";

import { getCollection } from 'astro:content';
const services = await getCollection('services');
console.log('SERVICES COLLECTION:', services);
---
<ExtendedLayout title="Welcome to Astro!" description="Your gateway to amazing projects.">
  <!-- Hero Section -->
<Section
  variant="primaryHero"
  heading={{ text: "Homepage", tagName: "h1" }}
  description="Welcome to Astro!"
  buttons={[
    { text: "See Our CTA", link: "/contact-us", variant: "secondary" },
    { text: "Learn More About Us", link: "/about-us" },
  ]}
/>

  <!-- Services -->
  <Section
    collection="services"
    query="getAll"
    heading={{ text: "Our Services", tagName: "h2" }}
  />

  <!-- Clients -->
  <Section
    sectionClass="animate-on-appear"
    collection="clients"
    query="getAll"
    heading={{ text: "Our Clients", tagName: "h2" }}
  />

  <!-- Projects -->
  <Section
    collection="projects"
    query="getAll"
    heading={{ text: "Our Projects", tagName: "h2" }}
  />

  <!-- Testimonials -->
  <Section
    collection="testimonials"
    query="getAll"
    heading={{ text: "Client Testimonials", tagName: "h2" }}
  />

  <Section collection="faq" query="getAll" />

</ExtendedLayout>