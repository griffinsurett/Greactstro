---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
import Card from "@/components/LoopComponents/Card";
import Modal from "@/components/Modal";
---

<Layout>
  <!-- Hero Section with two buttons -->
  <Section 
  heading="Homepage" 
  description="Welcome to Astro!" 
  buttons={[
    { text: "See Our CTA", link: "/contact-us" },
    { text: "Learn More", link: "/about-us" }
  ]}
/>


  {/* Services */}
  <Section
    collection="services"
    query="getAll"
    component={Card}
  />

  {/* Clients */}
  <Section
    collection="clients"
    query="getAll"
    component={Card}
  />

  {/* Projects */}
  <Section
    collection="projects"
    query="getAll"
    component={Card}
  />

  {/* Testimonials */}
  <Section
    collection="testimonials"
    query="getAll"
    component={Card}
  />

</Layout>

