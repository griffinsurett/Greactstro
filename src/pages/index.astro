---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
import Card from "@/components/LoopComponents/Card";
import Modal from "@/components/Modal";
---

<Layout title="Welcome to Astro!">
  <!-- Hero Section with two buttons -->
  <Section 
  heading={{ text: "Homepage", tagName: "h1" }}
  description="Welcome to Astro!" 
  buttons={[
    { text: "See Our CTA", link: "/contact-us" },
    { text: "Learn More About Us", link: "/about-us" }
  ]}
/>


 {/* Services */}
 <Section
 collection="services"
 query="getAll"
 component={Card}
 heading={{ text: "Our Services", tagName: "h2" }}
/>

{/* Clients */}
<Section
 collection="clients"
 query="getAll"
 component={Card}
 heading={{ text: "Our Clients", tagName: "h2" }}
/>

{/* Projects */}
<Section
 collection="projects"
 query="getAll"
 component={Card}
 heading={{ text: "Our Projects", tagName: "h2" }}
/>

{/* Testimonials */}
<Section
 collection="testimonials"
 query="getAll"
 component={Card}
 heading={{ text: "Client Testimonials", tagName: "h2" }}
/>

</Layout>

