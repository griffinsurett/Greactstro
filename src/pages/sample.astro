---
import Modal from '../components/Modal.jsx';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Astro Modal Demo</title>
  </head>
  <body class="p-6">
    <!-- Click trigger: a button with an id -->
    <button
      id="open-modal-btn"
      class="px-4 py-2 bg-blue-500 text-white rounded"
    >
      Open Modal (Click)
    </button>

    <!-- Modal opens on click using the external element with id "open-modal-btn" -->
    <Modal client:load triggerId="open-modal-btn">
      <h2 className="text-2xl font-bold mb-4">Modal Content</h2>
      <p>This modal was opened via click on the external trigger.</p>
    </Modal>

    <!-- Hover trigger: a button with an id -->
    <button
      id="hover-modal-btn"
      class="mt-8 px-4 py-2 bg-green-500 text-white rounded"
    >
      Hover to Open Modal
    </button>

    <!-- Modal opens on hover; if the user hovers over the modal, it immediately closes -->
    <Modal client:load triggerId="hover-modal-btn" openTrigger="hover" closeButton={false}>
      <h2 className="text-2xl font-bold mb-4">Hover Modal</h2>
      <p>This modal opens via hover on the external trigger and auto-closes if hovered over.</p>
    </Modal>
  </body>
</html>
