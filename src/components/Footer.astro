---
import { buildMenuQueries } from "@/utils/ArrayQueryUtils";
import ItemsTemplate from "./Section/ItemsTemplates/ItemsTemplate.astro";
import MenuItem from "./LoopComponents/MenuItem.astro";
---
<footer class="p-[var(--spacing-md)]">
      <ItemsTemplate
      collection="menuItems"
      query="relatedItem:menus:footerMenu"
      sortOrder="asc"
      ItemComponent={MenuItem}
      itemsClass="flex gap-[var(--spacing-md)]"
      itemClass=""
      HasPage={false}
    />
  <p class="mt-[var(--spacing-md)] text-[var(--font-size-sm)]">
    &copy; {new Date().getFullYear()} Cleanomatic. All rights reserved.
  </p>
</footer>
