---
/*
  Renders a submenu for a menu item.
  Determines the RenderComponent for submenu items, similar to NavMenuList.
*/
const { 
  items = [], 
  depth = 1, 
  submenuClass = "", 
  menuItemClass = "", 
  isHierarchical = true, 
  menuItemComponent,
  breakpoint
} = Astro.props;
import DefaultMenuItem from './MenuItem.astro';
const RenderComponent = menuItemComponent ? menuItemComponent : DefaultMenuItem;
const finalSubmenuClass = submenuClass || menuItemClass;
---
<ul class={`absolute ${depth === 1 ? 'top-full left-0' : 'top-0 left-full'} ${finalSubmenuClass} shadow-lg z-50 list-none min-w-max w-auto hidden transition duration-200`}>
  {items.map((item) => (
    <RenderComponent 
      item={item} 
      depth={depth} 
      menuItemClass={menuItemClass}
      submenuClass={submenuClass}
      isHierarchical={isHierarchical}
      breakpoint={breakpoint}
    />
  ))}
</ul>
