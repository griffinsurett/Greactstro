---
// src/components/Header.astro

import { SiteData } from "@/content/SiteData";
import { Image } from "astro:assets";
import ItemsTemplate from "@/components/Section/ItemsTemplates/ItemsTemplate.astro";
import MenuItem from "@/components/LoopComponents/MenuItem.astro";
---
<header class="flex justify-between items-center p-[var(--spacing-md)] bg-white">
  <!-- Left side: logo / site identity -->
  <a href="/" class="flex items-center">
    <Image
      src={SiteData.logo.src}
      alt={`${SiteData.title} logo`}
      class="h-10 w-auto"
      format="webp"
      loading="eager"
      fetchpriority="high"
      aria-hidden="true"
    />
    <div class="ml-[var(--spacing-sm)]">
      <div class="text-xl font-bold">{SiteData.title}</div>
      <div class="text-sm text-gray-600">{SiteData.tagline}</div>
    </div>
  </a>

  <!-- Right side: render only those menuItems whose frontmatter menu includes "mainMenu" -->
  <nav>
    <ItemsTemplate
      collection="menuItems"
      query="relatedItem:menus:mainMenu"
      sortOrder="asc"
      ItemComponent={MenuItem}
      itemsClass="flex gap-[var(--spacing-md)]"
      itemClass=""
      HasPage={false}
    />
  </nav>
</header>
