---
import { SiteData } from "@/content/SiteData";
import { Image } from "astro:assets";
import Menu from "@/components/Menu/Menu.astro";
import MenuItem from "@/components/Menu/MenuItem.astro";
import Submenu from "@/components/Menu/Submenu.astro"; // your custom submenu component
---

<header
  class="flex justify-between items-center p-[var(--spacing-md)] bg-white"
>
  <!-- Logo / site identity -->
  <a href="/" class="flex items-center">
    <Image
      src={SiteData.logo.src}
      alt={`${SiteData.title} logo`}
      class="h-10 w-auto"
      format="webp"
      loading="eager"
      fetchpriority="high"
      aria-hidden="true"
    />
    <div class="ml-[var(--spacing-sm)]">
      <div class="text-xl font-bold">{SiteData.title}</div>
      <div class="text-sm text-gray-600">{SiteData.tagline}</div>
    </div>
  </a>

    <Menu
      collection="menuItems"
      query="relatedItem:menus:mainMenu"
      sortOrder="asc"
      itemsClass="hidden md:flex gap-[var(--spacing-md)]"
      menuItem={{
        component: MenuItem,
        props: {
          itemClass: "px-2 py-1 text-primary hover:text-secondary",
          linkClass:
            "flex items-center space-x-[var(--spacing-xs)] font-bold transition-colors duration-200",
          hierarchical: true, // will look for children
          submenu: {
            component: Submenu,
            itemsClass:
              "submenu absolute left-0 top-full w-56 bg-gray-50 border border-gray-200 shadow-lg opacity-0 pointer-events-none transition-opacity duration-200 ease-in-out z-[100]",
            subMenuItem: {
              component: MenuItem,
              props: {
                itemClass:
                  "px-4 py-2 hover:bg-gray-100 text-primary hover:text-secondary",
                linkClass:
                  "flex items-center space-x-[var(--spacing-xs)] font-medium transition-colors duration-200",
                hierarchical: true,
                subMenuItem: null, // you can nest a deeper override here if required
              },
            },
          },
        },
      }}
    />
</header>
