---
import { SiteData } from "@/content/SiteData";
import { buildContentQueries } from "@/utils/ArrayQueryUtils";
import Menu from "../components/Menu/Menu.astro";
import MenuItem from "../components/Menu/BarMenu/MenuItem.astro";    // default main menu item
import MenuItem2 from "../components/Menu/BarMenu/MenuItem2.astro";  // custom submenu item
import { Image } from "astro:assets";
import Heading from "./Heading";

const baseMainNavMenu = [
  { id: "home", label: "Home", slug: "/" },
  { id: "about", label: "About Us", slug: "/about-us" },
  { id: "contact", label: "Contact", slug: "/contact-us", position: "append", weight: 100 },
];
const finalQueries = await buildContentQueries({ MainNavMenu: baseMainNavMenu });
const headerMenu = finalQueries.MainNavMenu || [];
---
<header class="flex justify-between items-center p-[var(--spacing-md)]">
  <a href="/" class="flex items-center">
    <Image
      src={SiteData.logo.src}
      alt={`${SiteData.title} logo`}
      class="h-12"
      format="webp"
      loading="eager"
      quality="low"
      fetchpriority="high"
      aria-hidden="true"
    />
    <div class="header-text">
      <Heading tagName="h1" className="h2">
        {SiteData.title}
      </Heading>
      <Heading tagName="h2" className="h5">
        {SiteData.tagline}
      </Heading>
    </div>
  </a>
  <Menu 
    items={headerMenu} 
    breakpoint="md" 
    menuClass="custom-menu-class" 
    menuItem={{ component: MenuItem, class: "custom-menu-item" }}
    submenuItem={{ component: MenuItem, class: "custom-submenu-class" }}
    isHierarchical={true}
  />
</header>
