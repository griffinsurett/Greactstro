---
import { buildContentQueries } from "src (old) r/utils/ArrayQueryUtils";
import Menu from "./Menu/BarMenu/NavMenu.astro";

const baseFooterMenu = [
  {
    id: "privacy",
    label: "Privacy Policy",
    slug: "/privacy-policy",
    weight: 10,
  },
  { id: "cookie", label: "Cookie Policy", slug: "/cookie-policy", weight: 20 },
  { id: "contact", label: "Contact Us", slug: "/contact-us", weight: 30 },
];

const finalQueries = await buildContentQueries({ FooterMenu: baseFooterMenu });
const footerMenu = finalQueries.FooterMenu || [];
---

<footer class="p-[var(--spacing-md)]">
  <Menu items={footerMenu} />
  <p class="mt-[var(--spacing-md)] text-[var(--font-size-sm)]">
    &copy; {new Date().getFullYear()} Cleanomatic. All rights reserved.
  </p>
</footer>
