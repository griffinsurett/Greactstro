---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
import Card from "src (old) r/components/LoopComponents/Card";
import Modal from "src (old) r/components/Modal";
import Picture from "astro/components/Picture.astro";
import DavidTruck from "@/assets/cleanomatic-truck-1.jpg";
---

<!-- Hero Section with two buttons -->
<Layout title="Welcome to Cleanomatic">
  <Section
    heading={[
      {
        text: "Welcome to Cleanomatic â€“ Your Trusted Cleaning Experts in New Jersey!",
        tagName: "h2",
      },
    ]}
    description="Welcome to Cleanomatic, your one-stop solution for professional cleaning services in New Jersey. With over 23 years of experience"
    buttons={[{ text: "Request Estimate", link: "/contact" }]}
    sectionClass="min-h-[85vh] flex items-center justify-center bg-cover bg-center z-10"
  >
    <Picture
      src={DavidTruck}
      alt="Cleanomatic Truck"
      class="absolute inset-0 w-full h-full object-cover z-0"
      loading="eager"
      fetchpriority="high"
      format="webp"
      fallbackFormat="jpeg"
    />
  </Section>

  <Section
    heading={[
      { text: "Cleaning done right, Cleanomatic!", tagName: "h2" },
      {
        text: "Your Trusted Cleaning Professionals for 23+ Years.",
        tagName: "h5",
      },
    ]}
    description="With over 23 years of experience, the Cleanomatic team is committed to delivering top-tier cleaning solutions for both residential and commercial clients. Whether you need thorough tile and grout restoration, air duct cleaning, or emergency water damage restoration, we have the expertise and tools to get the job done right."
    buttons={[{ text: "About Us", link: "/about", class: "color-primary" }]}
  />

  {/* Services */}
  <Section collection="services" query="getAll" component={Card} />

  {/* Testimonials */}
  <Section collection="testimonials" query="getAll" component={Card} />

  {/* Projects */}
  <Section collection="projects" query="getAll" component={Card} />
</Layout>
